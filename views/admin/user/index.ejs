<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>

<!-- dari sini -->
<div class="main-panel">
    <div class="content-wrapper">

        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Tambah <%- title %></h4>
                    <form class="form-inline" action="/user" method="post">
                        <div class="form-group">
                            <label class="sr-only" for="name">Nama Lengkap </label>
                            <input type="text" class="form-control mb-2 mr-sm-2" id="name" name="name" placeholder="Jane Doe">
                        </div>
                        <div class="form-group">
                            <label class="sr-only" for="email">Email </label>
                            <input type="text" class="form-control mb-2 mr-sm-2" id="email" name="email" placeholder="Jane@Doe.com">
                        </div>
                        <div class="form-group">
                            <label class="sr-only" for="phonenumber">Nomor HP </label>
                            <input type="number" class="form-control mb-2 mr-sm-2" id="phonenumber" name="phonenumber" placeholder="08545655859">
                        </div>
                        
                        <button type="submit" class="btn btn-primary mb-2">Submit</button>
                    </form>
                </div>
            </div>
        </div>
        <!-- Table -->
        <%- include ./table.ejs %>

    </div>
    <!-- content-wrapper ends -->

<!-- main-panel ends in footer -->

    
<%- include ../../partials/footer.ejs %>
